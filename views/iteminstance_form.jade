extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='item') Item:
      select#item.form-control(name='item' required)
        option(value='') --Please select an item--
        for item in item_list
          if selected_item==item._id.toString()
            option(value=item._id, selected) #{item.name}
          else
            option(value=item._id) #{item.name}

    div.form-group
      label(for='stock') Stock:
     input#stock.form-control(type='text' placeholder='Enter stock' name='stock' required value=(iteminstance && iteminstance.stock ? iteminstance.stock : ''))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg