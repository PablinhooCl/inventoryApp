extends layout
block content 
    h1 ID: #{iteminstance._id}

    p #[strong Item: ]
        a(href=iteminstance.item.url) #{iteminstance.item.name}
    p#[strong Stock: ] #{iteminstance.stock}
    p#[strong Stock Status: ]
        
        if iteminstance.stock === 0
            No stock
        else if iteminstance.stock > 0 && iteminstance.stock < 5
            Low stock
        else
            Available stock
    hr
    p
     a(href=iteminstance.url+'/delete') Delete Instance