extends layout

block content

  h1 #{title}: #{item.name}

  if item_instance.length
    p #[strong Delete the following Instance before attempting to delete this Item.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Item
      dl
        each instance in item_instance
          dt
            a(href=instance.url) #{instance._id}

  else
    p Do you really want to delete this Item?

    form(method='POST')
      div.form-group
        input#aitemid.form-control(type='hidden', name='itemid', value=item._id )

      button.btn.btn-primary(type='submit') Delete